{
  "manifest_version": 3,
  "name": "RSD 10",
  "version": "1.0",
  "description": "Stream videos directly from torrent files or magnet links using a remote API. This extension allows you to watch videos without downloading them first, and includes features like a detached player, improved subtitle extraction with conditional UI feedback for MP4 and MKV files, and immediate snackbar messages for better user experience.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "windows",
    "storage",
    "offscreen"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "https://rsd.ovh/*"
  ],
  "externally_connectable": {
    "matches": ["*://*.youtube.com/*", "*://*.google.com/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["detached_player.html", "detached_player.js", "content.css", "vendor/cast_sender.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; media-src https://rsd.ovh;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon30.png",
      "48": "icons/icon30.png"
    }
  },
  "icons": {
    "16": "icons/icon30.png",
    "48": "icons/icon30.png",
    "128": "icons/icon30.png"
  }
}